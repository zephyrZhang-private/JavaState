<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    <!--servlet映射路径配置-->
    <servlet>
        <servlet-name>servletPath</servlet-name>
        <servlet-class>servletPath.ServletPath</servlet-class>
        <!--servlet配置参数-->
        <init-param>
            <param-name>encoding</param-name>
            <param-value>gbk</param-value>
        </init-param>
        <!--当前Tomcat容器启动时候创建servlet,参数为正整数,数值越小优先级越高-->
    </servlet>
    <servlet-mapping>
        <servlet-name>servletPath</servlet-name>
        <!--    映射路径(虚拟路径)
            精准匹配:/my,配置精确的虚拟路径url
            后缀名匹配:*.do,任意do结尾的资源路径被匹配
            通配符匹配:/*,任意的资源路径可以被匹配(包含*.jsp),当有一个具体路径与/*重合了,有限匹配精准匹配
            通配符匹配:/,任意的资源路径可以被匹配(不包含*.jsp)
        -->
        <url-pattern>/servletPath</url-pattern>
    </servlet-mapping>
</web-app>